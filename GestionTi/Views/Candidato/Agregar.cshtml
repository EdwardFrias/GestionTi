@model GestionTi.Models.Candidatos

@{
    ViewBag.Title = "Agregar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Agregar</h2>


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal">
    <h4>Candidatos</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })


    <div class="form-group">
        <label class="control-label col-md-2">Cedula</label>
        <div class="col-md-10">
            <input type="text" class="form-control required"  name="Candidatos_Cedula" id="Candidatos_Cedula" placeholder="Ingrese su cedula" />
            @Html.ValidationMessageFor(model => model.Candidatos_Cedula, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <label class="control-label col-md-2">Nombre</label>
        <div class="col-md-10">
            <input type="text" class="form-control required"  id="Candidatos_Nombre" name="Candidatos_Nombre" placeholder="Ingrese su Nombre" />
            @Html.ValidationMessageFor(model => model.Candidatos_Nombre, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <label class="control-label col-md-2">Apellido</label>
        <div class="col-md-10">
            <input type="text" class="form-control required" id="Candidatos_Apellido" name="Candidatos_Apellido" placeholder="Ingrese su apellido" />
            @Html.ValidationMessageFor(model => model.Candidatos_Apellido, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <label class="control-label col-md-2">Trabajo actual</label>
        <div class="col-md-10">
            <input type="text" class="form-control" id="Candidatos_TrabajoActual" name="Candidatos_TrabajoActual" placeholder="En que trabajas?" />
            @Html.ValidationMessageFor(model => model.Candidatos_TrabajoActual, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <label class="control-label col-md-2">Expectativa Salarial</label>
        <div class="col-md-10">
            <input type="number" class="form-control" id="Candidatos_ExpectativaSalarial" name="Candidatos_ExpectativaSalarial" placeholder=" Cuánto espera ganar?" min="0" />
            @Html.ValidationMessageFor(model => model.Candidatos_ExpectativaSalarial, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <label class="control-label col-md-2">Observaciones</label>
        <div class="col-md-10">
            <input type="text" class="form-control" id="Candidatos_Observaciones" name="Candidatos_Observaciones" placeholder="Alguna observacion ?" />
            @Html.ValidationMessageFor(model => model.Candidatos_Observaciones, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <label class="control-label col-md-2">Fecha de Nacimiento</label>
        <div class="col-md-10">
            <input type="date" class="form-control required" id="Candidatos_FechaNacimiento" name="Candidatos_FechaNacimiento" placeholder="Fecha de nacimiento" />
            @Html.ValidationMessageFor(model => model.Candidatos_FechaNacimiento, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Crear" class="btn btn-primary" />
        </div>
    </div>
</div>
}

<div>
    @Html.ActionLink("Regresar", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
